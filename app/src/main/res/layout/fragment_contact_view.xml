<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#f9f9f9">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_view_image"
        android:src="@drawable/placeholder_default"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_view_phone"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/contact_view_lastName"
        android:layout_alignLeft="@+id/contact_view_image"
        android:layout_alignStart="@+id/contact_view_image"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:text="email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_view_emailTitle"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/contact_view_phone"
        android:layout_alignLeft="@+id/contact_view_phone"
        android:layout_alignStart="@+id/contact_view_phone" />

    <TextView
        android:text="+420 603 845 101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_view_phoneValue"
        android:textColor="@color/myDarkGray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/contact_view_phone"
        android:layout_alignBottom="@+id/contact_view_phone"
        android:layout_alignLeft="@+id/contact_view_firstName"
        android:layout_alignStart="@+id/contact_view_firstName"
        android:textAlignment="textStart" />

    <TextView
        android:text="notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_view_notesTitle"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/contact_view_emailTitle"
        android:layout_alignStart="@+id/contact_view_emailTitle" />

    <TextView
        android:text="notes to be shown.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contact_view_notesTitle"
        android:layout_alignLeft="@+id/contact_view_emailValue"
        android:layout_alignStart="@+id/contact_view_emailValue"
        android:id="@+id/contact_view_notesValue"
        android:textStyle="normal|italic" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/contact_view_notesTitle"
        android:layout_alignStart="@+id/contact_view_notesTitle" />

    <TextView
        android:text="mailme@whatever.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_view_emailValue"
        android:textSize="14sp"
        android:textColor="@color/myDarkGray"
        android:layout_alignBaseline="@+id/contact_view_emailTitle"
        android:layout_alignBottom="@+id/contact_view_emailTitle"
        android:layout_alignRight="@+id/ratingBar"
        android:layout_alignEnd="@+id/ratingBar"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_view_lastName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Detail Last Name "
        android:layout_below="@+id/contact_view_firstName"
        android:layout_alignRight="@+id/contact_view_firstName"
        android:layout_alignEnd="@+id/contact_view_firstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_view_firstName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Detail First Name "

        android:layout_gravity="left"
        android:textAlignment="gravity"
        android:layout_alignTop="@+id/contact_view_image"
        android:layout_alignLeft="@+id/contact_view_emailValue"
        android:layout_alignStart="@+id/contact_view_emailValue"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

</RelativeLayout>
